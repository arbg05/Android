<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WeatherActivity"
    android:background="@drawable/tree">

    <TextView
        android:id="@+id/ambientTemp"
        android:text="@string/ambient_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listview_height"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:divider="@drawable/listdivider_dotted"
        android:layout_below="@id/ambientTemp"
        android:background="#336699CC"/>

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/listView"
        android:layout_margin="@dimen/button_margin"
        android:layout_centerHorizontal="true"
        android:text="@string/action_show_fahrenheit"
        android:textStyle="bold"/>

</RelativeLayout>
